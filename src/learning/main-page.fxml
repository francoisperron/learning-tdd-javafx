<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.192" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0"
      prefWidth="640.0"
      fx:controller="learning.MainPage">
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
        <TextField fx:id="newTodo" onAction="#addTodo"/>
        <Button fx:id="addButton" contentDisplay="CENTER" mnemonicParsing="false" text="Add" onAction="#addTodo"/>
    </HBox>
    <HBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
        <Label fx:id="todos"/>
    </HBox>
</VBox>
